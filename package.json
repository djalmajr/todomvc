{
  "name": "todomvc",
  "private": true,
  "version": "0.1.0",
  "description": "A UCE version of TodoMVC",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "bugs": {
    "url": "https://github.com/djalmajr/todomvc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/todomvc.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"src/**/*.js\""
    }
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "prettier": {
    "printWidth": 80
  },
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "dev": "rollup -c -w",
    "start": "run-p dev serve",
    "serve": "sirv dist --port 8887 --single --dev"
  },
  "dependencies": {
    "uce": "^1.11.0",
    "uce-mixins": "^0.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "eslint": "^7.6.0",
    "eslint-config-preact": "^1.1.1",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.3"
  }
}
