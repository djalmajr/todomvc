{
  "name": "todomvc",
  "private": true,
  "version": "0.1.0",
  "description": "An Vanilla version of TodoMVC",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "bugs": {
    "url": "https://github.com/djalmajr/todomvc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/todomvc.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"src/app/**/*.js\""
    }
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build:dev": "rollup -c -w --environment NODE_ENV:development",
    "build": "rollup -c --environment NODE_ENV:production",
    "serve:dev": "sirv dist --port 8887 --single --dev",
    "serve": "npx -p sirv-cli sirv src --port 8887 --single --dev",
    "start": "run-p build:dev serve:dev"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "eslint": "^7.15.0",
    "eslint-config-preact": "^1.1.3",
    "husky": "^4.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.36.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-html2": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.10"
  }
}
