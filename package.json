{
  "name": "inquest",
  "private": true,
  "version": "0.1.0",
  "description": "An Interview Questions repository",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "bugs": {
    "url": "https://github.com/djalmajr/inquest/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/inquest.git"
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "prettier": {
    "printWidth": 80
  },
  "scripts": {
    "build": "npm run clean && rollup -c --environment NODE_ENV:production",
    "build:es": "npm run clean && cp -r public/* src dist && mv dist/imports.html dist/index.html",
    "build:dev": "npm run clean && rollup -c -w --environment NODE_ENV:development",
    "clean": "rm -rf dist 2> /dev/null && mkdir dist",
    "serve": "sirv dist --port 8887 --single --dev",
    "start": "run-p build:dev serve"
  },
  "dependencies": {
    "uland": "^0.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-replace": "^2.3.3",
    "eslint": "^7.6.0",
    "eslint-config-preact": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-terser": "^7.0.0",
    "sirv-cli": "^1.0.3"
  }
}
