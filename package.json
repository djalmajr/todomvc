{
  "name": "todomvc",
  "private": true,
  "version": "0.1.0",
  "description": "A Haunted version of TodoMVC",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "bugs": {
    "url": "https://github.com/djalmajr/todomvc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/todomvc.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"src/**/*.js\""
    }
  },
  "eslintConfig": {
    "extends": "preact"
  },
  "prettier": {
    "printWidth": 80
  },
  "scripts": {
    "build": "run-p build:js build:css",
    "build:css": "NODE_ENV=production postcss src/styles/tailwind.css -o dist/index.css",
    "build:css:watch": "postcss src/styles/tailwind.css -o dist/index.css --watch",
    "build:js": "rollup -c --environment NODE_ENV:production",
    "build:js:dev": "rollup -c -w",
    "serve": "sirv dist --port 8887 --single --dev",
    "start": "run-p build:js:dev build:css:watch serve"
  },
  "dependencies": {
    "uland": "^0.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "eslint": "^7.6.0",
    "eslint-config-preact": "^1.1.1",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.3",
    "tailwindcss": "^1.6.2"
  }
}
