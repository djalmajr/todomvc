{
  "name": "todomvc",
  "private": true,
  "version": "0.1.0",
  "description": "A Haunted version of TodoMVC",
  "author": "Djalma Jr. <djalmajr@gmail.com>",
  "license": "UNLICENSED",
  "main": "src/index.js",
  "bugs": {
    "url": "https://github.com/djalmajr/todomvc/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:djalmajr/todomvc.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"src/**/*.js\""
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "build:dev": "rollup -c -w",
    "serve": "sirv dist --port 8887 --single --dev",
    "start": "run-p build:dev serve"
  },
  "dependencies": {
    "haunted": "^4.7.0",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "query-selector-shadow-dom": "^0.6.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-esm-import-to-url": "^2.1.0",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.3"
  }
}
